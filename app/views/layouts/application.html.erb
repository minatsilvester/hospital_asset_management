<!DOCTYPE html>
<html>
  <head>
    <title>HospitalAssetManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
      </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="/">
          <button class="btn btn-outline-primary"><%= t 'product_name' %></button>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to t('navbar.edit'), edit_user_registration_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to t('navbar.sign_out'), delete_user_session_path, class: "nav-link" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to t('navbar.sign_up'), new_user_registration_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to t('navbar.sign_in'), new_user_session_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
